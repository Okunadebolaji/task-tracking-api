# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# 1. Copy the project file directly from the root
# No more "TaskTrackingApi/" prefix!
COPY ["TaskTrackingApi.csproj", "./"]

# 2. Restore dependencies
RUN dotnet restore "TaskTrackingApi.csproj"

# 3. Copy everything else
COPY . .

# 4. Build the app
RUN dotnet publish "TaskTrackingApi.csproj" -c Release -o /app/publish

# Stage 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .

# Start the API
ENTRYPOINT ["dotnet", "TaskTrackingApi.dll"]